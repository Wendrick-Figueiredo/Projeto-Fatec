@{
    Layout = null;
    ViewData["Title"] = "Login";
}

<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    @* <link rel="stylesheet" type="text/css" href="style.css"> *@
    <title>Tela de Login</title>
</head>
<style>
    body {
        
        background-position: center center;
        background-repeat: no-repeat;
        background-size: cover;
        height: 100vh;
        width: 100vw;
        margin: 0;
        padding: 0;
        display: flex;
        justify-content: center;
        align-items: center;
        overflow: hidden;
    }

    main {
        background-image: url("~/css/login/~/img/use.jpeg");
        display: grid;
        justify-content: center;
        align-items: center;
        margin: auto;
    }

    .efeitoLabel {
        transition: all 0.5s;
        width: 94%;
        font-size: 17px;
        padding: 1ch 2ch;
        background-color: white;
        font-weight: bolder;
        color: #000;
        cursor: pointer;
        border: none;
        border-radius: 2px;
        box-shadow:
            -2px -2px 0px hsl(0, 0%, 70%),
            -4px -4px 0px hsl(0, 0%, 60%),
            -6px -6px 0px hsl(0, 0%, 50%),
            -8px -8px 0px hsl(0, 0%, 40%),
            -10px -10px 0px hsl(0, 0%, 30%);
    }

    .password-container-registro {
        position: relative;
        /* Para posicionar o √≠cone em rela√ß√£o ao campo */
    }

    .password-container-registro input {
        padding-right: 30px;
        /* Espa√ßo para o √≠cone */
    }

    #togglePassword-registro {
        position: absolute;
        right: 10px;
        /* Dist√¢ncia do lado direito */
        top: 50%;
        /* Centralizar verticalmente */
        transform: translateY(-50%);
        /* Ajuste para centralizar corretamente */
        cursor: pointer;
        /* Mudar o cursor para indicar que √© clic√°vel */
    }

    .efeitoPassword {
        transition: all 0.5s;
        width: 94%;
        font-size: 17px;
        padding: 1ch 2ch;
        background-color: white;
        color: #000;
        font-weight: bolder;
        cursor: pointer;
        border: none;
        border-radius: 2px;
        box-shadow:
            -2px -2px 0px hsl(0, 0%, 70%),
            -4px -4px 0px hsl(0, 0%, 60%),
            -6px -6px 0px hsl(0, 0%, 50%),
            -8px -8px 0px hsl(0, 0%, 40%),
            -10px -10px 0px hsl(0, 0%, 30%);
    }

    .form-container-registro {
        width: 350px;
        border-radius: 0.75rem;
        background-color: rgba(17, 24, 39, 0.8);
        padding: 2rem;
        color: rgba(243, 244, 246, 1);
        backdrop-filter: blur(20px);
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
    }

    .title-registro {
        text-align: center;
        font-size: 1.5rem;
        line-height: 2rem;
        font-weight: 700;
    }

    .form-registro {
        margin-top: 1.5rem;
    }

    .input-group-registro {
        margin-top: 0.25rem;
        font-size: 0.875rem;
        line-height: 1.25rem;
    }

    .input-group-registro label {
        display: block;
        color: rgba(156, 163, 175, 1);
        margin-bottom: 4px;
    }

    .input-group-registro input {
        width: 95%;
        border-radius: 0.375rem;
        border: 1px solid rgba(55, 65, 81, 1);
        outline: 0;
        background-color: rgba(17, 24, 39, 1);
        padding: 0.75rem 1rem;
        color: rgba(243, 244, 246, 1);
    }

    .input-group-registro input:focus {
        border-color: rgba(167, 139, 250);
    }

    .sign-registro {
        display: block;
        width: 100%;
        background-color: rgba(167, 139, 250, 1);
        padding: 0.75rem;
        text-align: center;
        color: rgba(17, 24, 39, 1);
        border: none;
        border-radius: 0.375rem;
        font-weight: 600;
    }

    .social-message {
        display: flex;
        align-items: center;
        padding-top: 1rem;
    }

    .line {
        height: 1px;
        flex: 1 1 0%;
        background-color: rgba(55, 65, 81, 1);
    }

    .social-message .message {
        padding-left: 0.75rem;
        padding-right: 0.75rem;
        font-size: 0.875rem;
        line-height: 1.25rem;
        color: rgba(156, 163, 175, 1);
    }

    .social-icons {
        display: flex;
        justify-content: center;
    }

    .social-icons .icon {
        border-radius: 0.125rem;
        padding: 0.75rem;
        border: none;
        background-color: transparent;
        margin-left: 8px;
    }

    .social-icons .icon svg {
        height: 1.25rem;
        width: 1.25rem;
        fill: #fff;
    }

    .signup-registro {
        text-align: center;
        font-size: 0.75rem;
        line-height: 1rem;
        color: rgba(156, 163, 175, 1);
    }
</style>

<body>
    <main>
        <div class="form-container-registro">
            <p class="title-registro">Login</p>
            <form class="form-registro">

                <div class="input-group-registro">
                    <label for="role">Selecione seu perfil</label>
                    <select name="role" id="role">
                        <option value="usuario" selected>Usu√°rio</option>
                        <option value="admin">Administrador</option>
                    </select>
                </div><br>

                <!-- Campos para administrador -->
                <div id="adminFields" style="display: none;">
                    <div class="input-group-registro">
                        <label for="codigoAcesso">C√≥digo de Acesso do Administrador</label>
                        <input type="text" name="codigoAcesso" id="codigoAcesso" placeholder="C√≥digo de Acesso do Adm">
                    </div>
                    <div class="input-group-registro">
                        <label for="adm-login">Nome Adm ou User Adm</label>
                        <input type="text" name="adm-login" id="adm-login" placeholder="Digite o Nome do Adm">
                    </div>
                    <div class="input-group-registro">
                        <label for="senha-login">Senha</label>
                        <input type="password" name="senha-login" id="senha-login" placeholder="Digite a sua Senha">
                    </div>
                </div>

                <!-- Campos para usu√°rio -->
                <div id="userFields">
                    <div class="input-group-registro"><br>
                        <label for="username-registro">Nome ou Usu√°rio</label>
                        <input type="text" name="username-registro" id="username-registro" placeholder="">
                    </div>
                    <div class="input-group-registro"><br>
                        <label for="password-registro" id="label">Senha</label>
                        <div class="password-container-registro">
                            <input type="password" name="password-registro" id="password-registro" placeholder="">
                            <span id="togglePassword-registro" title="Ver Minha Senha">üëÅÔ∏è</span>
                        </div>
                    </div>
                </div>

                <br><br>
                <button class="sign-registro" asp-controller="Home" asp-action="Index">Entrar</button>
            </form>
            <p class="signup-registro">N√£o tenho conta?
                <a rel="noopener noreferrer" href="#" class="">Cadastrar</a>
            </p>
        </div>
    </main>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const usernameInputRegistro = document.getElementById("username-registro");
            const passwordInputRegistro = document.getElementById("password-registro");
            const usernameLabelRegistro = document.querySelector("label[for='username-registro']");
            const passwordLabelRegistro = document.querySelector("label[for='password-registro']");
            const togglePasswordButtonRegistro = document.getElementById("togglePassword-registro");

            const originalUserText = usernameLabelRegistro.innerText;
            const originalPassText = passwordLabelRegistro.innerText;

            const roleSelect = document.getElementById("role");
            const adminFields = document.getElementById("adminFields");
            const userFields = document.getElementById("userFields");

            adminFields.style.display = "none";
            userFields.style.display = "block";

            roleSelect.addEventListener("change", function () {
                if (roleSelect.value === "admin") {
                    adminFields.style.display = "block";
                    userFields.style.display = "none";
                } else {
                    adminFields.style.display = "none";
                    userFields.style.display = "block";
                }
            });

            usernameInputRegistro.addEventListener("focus", function () {
                usernameLabelRegistro.classList.add("efeitoLabel");
                usernameLabelRegistro.innerText = "Digite Nome ou Usu√°rio...";
            });

            usernameInputRegistro.addEventListener("blur", function () {
                usernameLabelRegistro.classList.remove("efeitoLabel");
                usernameLabelRegistro.innerText = originalUserText;
            });

            passwordInputRegistro.addEventListener("focus", function () {
                passwordLabelRegistro.classList.add("efeitoPassword");
                passwordLabelRegistro.innerText = "Digite uma Senha..."
            });

            passwordInputRegistro.addEventListener("blur", function () {
                passwordLabelRegistro.classList.remove("efeitoPassword");
                passwordLabelRegistro.innerText = originalPassText;
            });

            togglePasswordButtonRegistro.addEventListener("click", function () {
                const isPasswordType = passwordInputRegistro.type === "password";
                passwordInputRegistro.type = isPasswordType ? "text" : "password";
                togglePasswordButtonRegistro.innerText = isPasswordType ? "üôà" : "üëÅÔ∏è";
            });
        });
    </script>
</body>

</html>
